{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"] // Specify custom types folder and default types
  },
  "include": ["handler.ts", "src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
