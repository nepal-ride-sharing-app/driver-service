{
  "name": "driver-service",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "vitest",
    "build": "tsc",
    "start": "sls offline --host 0.0.0.0 --stage development",
    "start:dev": "sls offline --host 0.0.0.0 --stage development --reloadHandler",
    "start:test": "npm run build && NODE_ENV=test sls deploy --stage test",
    "start:prod": "npm run build && NODE_ENV=production sls deploy --stage production",
    "dev": "npm run start:dev",
    "prod": "npm run start:prod",
    "deploy": "npm run build && sls deploy",
    "start:express:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node --transpile-only' ./src/server.ts",
    "start:express:test": "NODE_ENV=test ts-node --transpile-only ./src/server.ts",
    "start:express:prod": "NODE_ENV=production ts-node --transpile-only ./src/server.ts",
    "deploy:express": "NODE_ENV=production ts-node src/server.ts",
    "lint": "eslint 'src/**/*.ts' 'types/**/*.ts' 'config/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'types/**/*.ts' 'config/**/*.ts'",
    "commitlint": "commitlint --edit $HUSKY_GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/express": "^4.17.21",
    "@types/express-winston": "^4.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^16.18.123",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.2",
    "husky": "^9.1.7",
    "nodemon": "^2.0.22",
    "prettier": "^3.4.2",
    "serverless": "^4.4.18",
    "serverless-http": "^3.2.0",
    "serverless-localstack": "^1.3.1",
    "serverless-offline": "^14.4.0",
    "serverless-webpack-offline-reload": "^1.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vitest": "^0.34.1"
  },
  "dependencies": {
    "express-winston": "^4.2.0",
    "morgan": "^1.10.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
